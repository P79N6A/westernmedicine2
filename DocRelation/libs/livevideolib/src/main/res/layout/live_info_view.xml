<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_info_left_top"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/info_left_bkg">

        <ImageView
            android:id="@+id/iv_info_head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/default_head_img" />

        <TextView
            android:id="@+id/tv_info_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_info_head_img"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_info_head_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:minWidth="60dp"
            android:text="XXX"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_info_text_fans"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_info_anchor_name"
            android:layout_alignRight="@+id/tv_info_anchor_name"
            android:layout_below="@+id/tv_info_anchor_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_info_head_img"
            android:text="在线1000"
            android:textColor="@color/color_white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_info_concern"
            android:layout_width="51dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_info_text_fans"
            android:background="@drawable/attend_bkg"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@color/color_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_info_left_top"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/watermark_img"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_info_recently_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_info_left_top"
        android:layout_alignTop="@+id/rl_info_left_top"
        android:layout_toRightOf="@+id/rl_info_left_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_info_recently_head_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info_left_bkg"
            android:visibility="gone" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_info_button_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/play_info_view_close" />


</RelativeLayout>