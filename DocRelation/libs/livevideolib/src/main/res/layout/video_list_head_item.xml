<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/host_page_bkg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_host_page_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/back_new"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/iv_host_page_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:src="@drawable/default_head_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_host_page_doc_name"
            style="@style/host_page_text_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无量医生" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_host_page_doc_info"
            style="@style/host_page_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主任医师" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp">

        <TextView
            style="@style/host_page_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注:" />

        <TextView
            android:id="@+id/tv_host_page_attend_number"
            style="@style/host_page_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="80"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="|"
            android:textColor="@color/white" />

        <TextView
            style="@style/host_page_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="粉丝:" />

        <TextView
            android:id="@+id/tv_host_page_fans_number"
            style="@style/host_page_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="56"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>