<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RadiobuttonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="dialog_fans_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="dialog_number_text_style" parent="dialog_fans_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_button_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_0dc3ce</item>
    </style>

    <style name="gift_item_text_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="host_page_text_doc_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="host_page_text_normal">
        <item name="android:textColor">#d0fafd</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="seekbar_text_time">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#d7d7d7</item>
    </style>
</resources>
