    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_head"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marght_left"
                android:text=""
                android:textColor="@color/my_textcolor"
                android:textSize="@dimen/text_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marght_left"
                android:layout_marginTop="@dimen/marght_8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marght_9dp"
                    android:text=""
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/tv_patient_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marght_9dp"
                    android:text=""
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_group_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_left"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="分组"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:id="@+id/enter_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />

        <TextView
            android:id="@+id/tv_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:layout_toLeftOf="@id/enter_right"
            android:text=""
            android:textColor="@color/my_textcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_diagnose_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_left"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="TA的诊疗记录"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_health_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_left"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="TA的健康动态"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_left"
        android:background="@drawable/item_bg_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="消息免打扰"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:id="@+id/img_swith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/radio_off"
            android:onClick="onClick_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marght_left"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_send_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_selector"
            android:onClick="onClick_back"
            android:text="发送消息"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>