<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/persinon_title" />

    <RelativeLayout
        android:id="@+id/re_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_left"
        android:background="@color/white">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marght_right"
            android:gravity="center_vertical"
            android:text="名额"
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edit_free_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/text"
            android:background="@drawable/yuanjiao"
            android:gravity="center_vertical|right"
            android:numeric="integer"
            android:paddingRight="@dimen/marght_left"
            android:text=""
            android:textColor="@color/purse_blue"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_stat_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_9dp"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marght_right"
            android:gravity="center_vertical"
            android:text="开始时间:"
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:numeric="integer"
            android:paddingRight="@dimen/marght_left"
            android:text=""
            android:textColor="@color/purse_blue"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_end_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_9dp"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marght_right"
            android:gravity="center_vertical"
            android:text="结束时间:"
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:numeric="integer"
            android:paddingRight="@dimen/marght_left"
            android:text=""
            android:textColor="@color/purse_blue"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marght_9dp"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="@color/white" />

</LinearLayout>