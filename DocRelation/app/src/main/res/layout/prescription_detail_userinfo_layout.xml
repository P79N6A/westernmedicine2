<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/marght_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/prescription_user_info_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_16dp"
            android:layout_weight="1"
            tools:text="姓名:" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/prescription_user_info_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_16dp"
            android:layout_weight="1"
            tools:text="年龄:" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marght_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/prescription_user_info_style"
            android:layout_marginLeft="@dimen/marght_16dp"
            tools:text="性别:"/>
        <TextView
            android:id="@+id/tv_section"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/prescription_user_info_style"
            android:layout_marginLeft="@dimen/marght_16dp"
            tools:text="科室:"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recipe_time"
        android:layout_marginTop="@dimen/marght_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/prescription_user_info_style"
        android:layout_marginLeft="@dimen/marght_16dp"
        tools:text="时间:"/>

    <TextView
        android:id="@+id/tv_reslult"
        android:layout_marginTop="@dimen/marght_10dp"
        android:layout_marginBottom="@dimen/marght_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/prescription_user_info_style"
        android:layout_marginLeft="@dimen/marght_16dp"
        tools:text="初步诊断 :"/>


</LinearLayout>