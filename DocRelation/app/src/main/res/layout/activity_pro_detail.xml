<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_pro_detail"
    android:background="@color/bg_img_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_tiaojian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@color/white"
            android:text="申请条件"
            android:textSize="@dimen/text_16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_pro_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tiaojian"
        android:background="@color/white"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:id="@+id/rl_corrent_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_tab_height"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_corrent_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blue_normal"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_null_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_tab_height"
            android:background="@color/transparentBlack" 
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_null_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>