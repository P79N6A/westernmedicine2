<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="14dp">

    <ImageView
        android:id="@+id/media_item_img"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:src="@drawable/discuss_imgs" />

    <TextView
        android:id="@+id/media_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/media_item_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="医生自由职业背后的不安医生自由职业背后的不安"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/media_item_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/media_item_title"
        android:layout_alignStart="@id/media_item_title"
        android:layout_below="@id/media_item_title"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="如果你无法间接的表达你的想法，那只能说明你还不了解它。--阿尔伯特·爱因斯坦" />

    <TextView
        android:id="@+id/media_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/media_item_img"
        android:layout_alignStart="@id/media_item_img"
        android:layout_below="@id/media_item_img"
        android:layout_marginTop="12dp"
        android:text="2015-07-14 12:00"
        android:textColor="#a8a8a8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/media_item_click_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/media_item_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/click_count"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/click_count"
        android:text="0"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="0.5dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/media_item_time"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@id/media_item_click_count"
        android:background="#999999" />

    <TextView
        android:id="@+id/media_item_praise_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/media_item_time"
        android:layout_toLeftOf="@id/divider"
        android:layout_toStartOf="@id/divider"
        android:drawableLeft="@drawable/icon_doctor_praise"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#999999"
        android:textSize="12sp" />

</RelativeLayout>