<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_edit_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_tab_height"
        android:background="@drawable/service_top_bar_bg" >

        <ImageButton
            android:id="@+id/btn_edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector_old"
            android:onClick="onEditClickListener" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加模板"
            android:textColor="@color/white"
            android:textSize="@dimen/xywy_top_title_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="@dimen/marght_left"
        android:orientation="vertical" 
        android:background="@color/white">

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marght_12dp"
            android:background="@null"
            android:textColor="@color/gray_text"
            android:hint="请输入模板内容" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn"
            android:onClick="onEditClickListener"
            android:padding="10dp"
            android:text="@string/ok"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_chanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/marght_8dp"
            android:layout_weight="1"
            android:background="@drawable/border_frame"
            android:onClick="onEditClickListener"
            android:text="取消"
            android:textColor="@color/gray_text" />
    </LinearLayout>

</LinearLayout>