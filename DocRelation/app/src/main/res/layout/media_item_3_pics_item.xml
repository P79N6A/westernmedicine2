<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/media_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="医生自由职业背后的不安医生自由职业背后的不安"
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/media_pics_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/media_item_title"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/media_pic_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/discuss_imgs" />

        <ImageView
            android:id="@+id/media_pic_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/discuss_imgs" />

        <ImageView
            android:id="@+id/media_pic_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/discuss_imgs" />

    </LinearLayout>

    <TextView
        android:id="@+id/media_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/media_pics_layout"
        android:layout_alignStart="@id/media_pics_layout"
        android:layout_below="@id/media_pics_layout"
        android:layout_marginTop="12dp"
        android:text="2015-07-14 12:00"
        android:textColor="#a8a8a8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/media_item_click_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/media_item_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/click_count"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/click_count"
        android:text="0"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="0.5dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/media_item_time"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@id/media_item_click_count"
        android:layout_toStartOf="@id/media_item_click_count"
        android:background="#999999" />

    <TextView
        android:id="@+id/media_item_praise_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/media_item_time"
        android:layout_toLeftOf="@id/divider"
        android:layout_toStartOf="@id/divider"
        android:drawableLeft="@drawable/icon_doctor_praise"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/icon_doctor_praise"
        android:gravity="center"
        android:text="0"
        android:textColor="#999999"
        android:textSize="12sp" />

</RelativeLayout>