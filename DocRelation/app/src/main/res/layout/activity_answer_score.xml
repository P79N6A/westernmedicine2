<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_answer_score_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/answer_score_bg_selector"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <RelativeLayout
            android:id="@+id/rl_answer_score_icon"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/answer_score_icon_selector">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="top"
                android:paddingTop="18dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_score_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试时间:"
                android:textColor="@color/answer_tv_color3" />

            <TextView
                android:id="@+id/tv_answer_time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 月 日 时  分"
                android:textColor="@color/answer_tv_color3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score_rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名列考生榜第"
                android:textColor="@color/answer_tv_color1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_score_rank_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@drawable/tv_rank_color_selector"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_score_rank_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名"
                android:textColor="@color/answer_tv_color1"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_score_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请在我的——我的收藏中查看已答完试卷"
            android:textColor="@color/answer_tv_color2"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
