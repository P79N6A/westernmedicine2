<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/marght_16dp"
              android:orientation="vertical">

    <!--<TextView-->
        <!--android:id="@+id/textView_item_firstletter"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="21dp"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textColor="@color/c999"-->
        <!--android:paddingLeft="@dimen/marght_16dp"-->
        <!--tools:text="A"-->
        <!--android:textSize="10sp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/marght_10dp"
        android:paddingTop="@dimen/marght_10dp">

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/patient_list_default"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/c333"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="阿光"/>
                <TextView
                    android:id="@+id/textView_item_pinyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    tools:text="ssss" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marght_7dp">

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:src="@drawable/man"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/c999"
                    android:textSize="@dimen/text_10sp"
                    tools:text="20岁"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>