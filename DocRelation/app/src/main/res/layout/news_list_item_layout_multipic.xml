<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="33dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/news_list_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="如果你无法间接的表达你的想法，那只能说明你还不了解它。--阿尔伯特·爱因斯坦"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/news_list_only"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/pics_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/news_list_title"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/discuss_imgs" />

            <ImageView
                android:id="@+id/pic_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/discuss_imgs" />

            <ImageView
                android:id="@+id/pic_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/discuss_imgs" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="2015-07-14 12:00"
            android:textColor="#A8A8A8"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/news_list_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/news_list_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:drawableLeft="@drawable/click_count"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/click_count"
            android:text="0"
            android:textColor="#A8A8A8"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>