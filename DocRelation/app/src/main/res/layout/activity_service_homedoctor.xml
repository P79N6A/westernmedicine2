<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <include
        android:id="@+id/home_doctor_title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_tab_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/radio_home_doctor_sign_orders"
            style="@style/radiobutton_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/home_doctor_txt_sign_orders"
            android:textColor="@drawable/main_botton_text_color"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@color/my_line" />

        <Button
            android:id="@+id/radio_home_doctor_user_comment"
            style="@style/radiobutton_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/home_doctor_txt_user_comment"
            android:textColor="@drawable/main_botton_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_doctor_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>