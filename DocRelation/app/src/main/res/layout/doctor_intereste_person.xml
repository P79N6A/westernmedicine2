<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="可能感兴趣的人"
        android:textColor="#999999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:paddingBottom="10dp" >

            <RelativeLayout
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_addfrends"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:drawableLeft="@drawable/selector_addfrends"
                    android:text="好友"
                    android:textColor="@color/tab_color_nomal"
                    android:textSize="13sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_person_poto"
                android:layout_width="@dimen/height_40dp"
                android:layout_height="@dimen/height_40dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop" />

            <TextView 
                android:id="@+id/tv_pserson_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_person_poto"
                android:textColor="@color/doctor_cirlor_name"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_pserson_time"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sidebar_text_size"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_pserson_username"
                android:textColor="@color/tab_color_nomal"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_pserson_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pserson_username"
                android:layout_toRightOf="@+id/iv_person_poto"
                android:textColor="@color/tab_color_nomal"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fafafa" >

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="#999999"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e8e8e8" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/marght_left" />
    </LinearLayout>

</LinearLayout>