<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginRight="@dimen/marght_left"
            android:text=""
            android:layout_marginTop="@dimen/marght_20dp"
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginTop="@dimen/marght_7dp"
            android:text=""
            android:textColor="@color/tab_color_nomal"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/btn_down"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_text2"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/yuanjiao_yellew"
            android:text="下载"
            android:visibility="gone"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    <View 
        android:layout_marginTop="@dimen/marght_7dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_line"
        />
