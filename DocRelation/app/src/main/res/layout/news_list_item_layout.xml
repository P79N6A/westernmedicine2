<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_list_only"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/news_list_img"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/discuss_imgs" />

            <TextView
                android:id="@+id/news_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/news_list_img"
                android:layout_toRightOf="@id/news_list_img"
                android:ellipsize="end"
                android:lines="2"
                android:text="如果你无法间接的表达你的想法，那只能说明你还不了解它。--阿尔伯特·爱因斯坦"
                android:textColor="#333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/news_list_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/news_list_title"
                android:layout_alignStart="@id/news_list_title"
                android:layout_below="@id/news_list_title"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"
                android:maxLines="2"
                android:text="如果你无法间接的表达你的想法，那只能说明你还不了解它。--阿尔伯特·爱因斯坦"
                android:textColor="#666666"
                android:textSize="13sp"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/news_list_img">

                <TextView
                    android:id="@+id/news_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="2015-07-14"
                    android:textColor="#A8A8A8"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_org_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/news_list_time"
                    android:text="所属公众号"
                    android:textColor="#A8A8A8"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/news_list_read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/news_list_time"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/click_count"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/click_count"
                    android:text="0"
                    android:textColor="#A8A8A8"
                    android:textSize="10sp" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>