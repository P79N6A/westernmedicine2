<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_live_show_root"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="64dp">

    <RelativeLayout
        android:id="@+id/rl_live_show_left"
        android:layout_width="0dp"

        android:paddingLeft="31dp"
        android:paddingRight="16dp"
        android:layout_weight="1"
        android:layout_height="64dp"

        android:background="@drawable/main_view_live_show_bg">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/main_view_live_show_icon" />


            <TextView
                android:id="@+id/tv_view_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="看直播"
                android:layout_toRightOf="@id/iv_icon1"
                style="@style/deep_gray_tv_style"
                android:textColor="#333333"
                android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        android:layout_width="0.5dp"/>

    <RelativeLayout
        android:id="@+id/rl_live_show_right"
        android:layout_width="0dp"
        android:paddingLeft="31dp"
        android:paddingRight="16dp"
        android:layout_weight="1"
        android:layout_height="64dp"
        android:background="@drawable/main_start_live_show_bg">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/main_start_live_show_icon" />


        <TextView
            android:id="@+id/tv_to_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="发直播"
            android:layout_toRightOf="@id/iv_icon2"
            style="@style/deep_gray_tv_style"
            android:textColor="#333333"
            android:textSize="15sp" />

    </RelativeLayout>


</LinearLayout>
