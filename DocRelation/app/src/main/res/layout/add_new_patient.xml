            android:text="长按二维码可以将二维码保存到本地哦"
            android:textColor="@color/tab_color_nomal"
            android:textSize="@dimen/text_11sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_wxing"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/icon_photo_def" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/my_id_card_shape"
                android:padding="4dp"
                android:src="@drawable/icon_photo_def" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_realname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/LinearLayout_height"
            android:gravity="center"
            android:text=""
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/LinearLayout_height"
            android:layout_marginBottom="@dimen/marght_18dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_15sp" />
