    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marght_20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/LinearLayout_height"
            android:gravity="center"
            android:text="患者用微信扫一扫成为您的患者"
            android:textColor="@color/my_textcolor"
            android:textSize="@dimen/text_15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/marght_9dp"
            android:layout_marginRight="@dimen/marght_9dp"
            android:background="@color/my_line" />

        <TextView
