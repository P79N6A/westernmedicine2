<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_selector"
    android:padding="10dp">

    <ImageView
        android:id="@+id/fans_list_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/icon_photo_def" />

    <TextView
        android:id="@+id/fans_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/fans_list_avatar"
        android:layout_toRightOf="@id/fans_list_avatar"
        android:background="?attr/selectableItemBackground"
        android:text="李瑶瑶"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fans_list_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/fans_list_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/fans_list_name"
        android:layout_toRightOf="@id/fans_list_name"
        android:text="心血管内科主任医师"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fans_list_hos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/fans_list_name"
        android:layout_alignStart="@id/fans_list_name"
        android:layout_below="@id/fans_list_name"
        android:layout_marginTop="8dp"
        android:text="北医三院"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fans_list_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blue_stroke_rectangle"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="+ 好友"
        android:textColor="@color/accentColor"
        android:textSize="12sp" />

</RelativeLayout>