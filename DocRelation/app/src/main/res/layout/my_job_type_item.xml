<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/real"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/true_ok" />

        <TextView
            android:id="@+id/tv_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_toLeftOf="@id/img_sure"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/selector_tabtext_old"
            android:textSize="@dimen/dp14" />
    </RelativeLayout>

