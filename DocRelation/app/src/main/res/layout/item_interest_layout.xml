<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/answer_list_view_grey_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_usrer_pic"
            android:layout_width="@dimen/height_40dp"
            android:layout_height="@dimen/height_40dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_usrer_pic"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_titlename_margin_left"
                android:textColor="@color/color_00c8aa"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sidebar_text_size"
                android:textColor="@color/tab_color_nomal"
                android:textSize="@dimen/text_14sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_addfrends"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:drawableLeft="@drawable/selector_addfrends"
                android:text="好友"
                android:textColor="@color/tab_color_nomal"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_toLeftOf="@+id/iv_add"
            android:layout_toRightOf="@+id/iv_usrer_pic"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_titlename_margin_left"
                android:singleLine="true"
                android:textColor="@color/tab_color_nomal"
                android:textSize="@dimen/text_14sp"/>

            <TextView
                android:id="@+id/hostpitall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_titlename_margin_left"
                android:singleLine="true"
                android:textColor="@color/tab_color_nomal"
                android:textSize="@dimen/text_14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_line"></View>

</LinearLayout>