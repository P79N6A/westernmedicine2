<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        tools:src="@drawable/refuse"/>
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp12"
        android:textColor="@color/c333"
        android:textSize="@dimen/text_16sp"
        tools:text="审核未通过"/>
    <LinearLayout
        android:layout_below="@id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marght_16dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp34"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/c999"
            android:gravity="center"
            tools:text="联系客服"
            android:layout_marginRight="@dimen/marght_5dp"
            tools:background="@drawable/activity_card_state_item_normal_bg"/>

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp34"
            android:gravity="center"
            android:textColor="@color/c999"
            android:textSize="@dimen/text_12sp"
            tools:text="重新申请"
            android:layout_marginLeft="@dimen/marght_5dp"
            tools:background="@drawable/activity_card_state_item_normal_bg"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marght_24dp"
        android:layout_margin="@dimen/marght_16dp"
        android:background="@drawable/yinhangkabeijing_2x">
        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:src="@drawable/nonghanglogo_2x"/>
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:text="中国农业银行"/>
        <TextView
            android:id="@+id/tv_bank_card"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:layout_below="@id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:layout_marginTop="@dimen/marght_8dp"
            android:text="储蓄卡"/>

        <LinearLayout
            android:layout_toRightOf="@id/iv_bank_logo"
            android:layout_below="@id/tv_bank_card"
            android:layout_marginTop="@dimen/dp24"
            android:layout_marginBottom="@dimen/dp32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="****"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="****"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp24"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="****"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp24"/>
            <TextView
                android:id="@+id/tv_end_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="3390"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp24"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
