<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_stu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_tab_height"
        android:background="@drawable/service_top_bar_bg" >

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector_old"
            android:onClick="onClick_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="专业认证"
            android:textColor="@color/white"
            android:textSize="@dimen/title_tv_size" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_left"
            android:background="@null"
            android:onClick="onClick_back"
            android:text="医师认证"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />
    </RelativeLayout>

    <com.xywy.askforexpert.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/re_heads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marght_left"
                android:background="@drawable/item_bg_selector"
                android:onClick="onClick_back" >

                <TextView
                    android:id="@+id/img_namecode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/marght_left"
                    android:text="头像"
                    android:textColor="@color/my_textcolor" />

                <ImageView
                    android:id="@+id/enter_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/marght_right"
                    android:background="@drawable/enter_right" />

                <ImageView
                    android:id="@+id/headimgs"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/marght_7dp"
                    android:layout_marginRight="@dimen/my_title_img_top"
                    android:layout_marginTop="@dimen/marght_7dp"
                    android:layout_toLeftOf="@id/enter_right"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marght_right"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marght_left"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marght_left"
                        android:text="学生证照"
                        android:textColor="@color/my_textcolor"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marght_left"
                        android:text="核心页面拍照上传（最多2张）"
                        android:textColor="@color/my_textcolor1"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <com.xywy.askforexpert.widget.view.HorizontalListView
                    android:id="@+id/idcard_stu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_70dp"
                    android:layout_marginBottom="@dimen/marght_9dp"
                    android:layout_marginLeft="@dimen/marght_left"
                    android:layout_marginTop="@dimen/marght_left" >
                </com.xywy.askforexpert.widget.view.HorizontalListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_120dp"
                android:layout_marginTop="@dimen/marght_right"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marght_left"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marght_left"
                        android:text="示例："
                        android:textColor="@color/my_textcolor"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marght_left"
                        android:text="资料仅审核人员可见"
                        android:textColor="@color/my_textcolor"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="@dimen/marght_left"
                    android:layout_marginTop="@dimen/marght_left"
                    android:background="@drawable/idcard_stu_small"
                    android:onClick="onClick_back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marght_left"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/lin_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/marght_8dp"
                    android:layout_marginRight="@dimen/marght_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_selector"
                    android:onClick="onClick_back"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp" />
            </LinearLayout>
        </LinearLayout>
    </com.xywy.askforexpert.widget.ReboundScrollView>

</LinearLayout>