<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_closed_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/name_dose_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="芬必得 0.3g*20粒"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/format_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1盒"
                android:textColor="#333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/method_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="16dp"
            android:text="用法:1次/日，每次两片，饭后服用，口服"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:background="@drawable/drug_edit_bg"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#00c8aa"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>