<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40191919"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xywy.askforexpert.module.message.friend.MyIdCardActivity"
    tools:showIn="@layout/activity_my_id_card">

    <RelativeLayout
        android:id="@+id/qr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_id_card_shape">

        <FrameLayout
            android:id="@+id/qr_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="195dp"
                android:layout_height="195dp"
                android:src="@drawable/icon_photo_def" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_id_card_shape"
                android:padding="4dp"
                android:src="@drawable/icon_photo_def" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qr_fl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/my_id_card_margins"
            android:text="扫一扫上面的二维码，拉近我们之间的距离"
            android:textColor="#999999"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
