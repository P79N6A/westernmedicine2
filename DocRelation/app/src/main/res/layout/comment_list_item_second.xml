<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_docname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginTop="@dimen/marght_20dp"
            android:layout_toRightOf="@id/head_img"
            android:text="石磊"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_redate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marght_7dp"
            android:layout_marginTop="@dimen/marght_20dp"
            android:text="一小时前"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_redate"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginRight="@dimen/marght_8dp"
            android:layout_marginTop="@dimen/marght_7dp"
            android:layout_toRightOf="@id/head_img"
            android:text="最近重视没我咬致死咖喱个垃圾森林法尽快设立机构"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_20dp"
            android:layout_below="@id/tv_content" />
    </RelativeLayout>

</LinearLayout>