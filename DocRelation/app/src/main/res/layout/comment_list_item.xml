<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="@dimen/height_30dp"
            android:layout_height="@dimen/height_30dp"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginTop="@dimen/marght_20dp"
            />

        <TextView
            android:id="@+id/tv_docname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginTop="@dimen/marght_20dp"
            android:layout_toRightOf="@id/head_img"
            android:text="石磊"
            android:textColor="@color/color_00c8aa"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_redate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marght_20dp"
            android:layout_marginTop="@dimen/marght_20dp"
            android:text="一小时前"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_redate"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginRight="@dimen/marght_8dp"
            android:layout_marginTop="@dimen/marght_7dp"
            android:layout_toRightOf="@id/head_img"
            android:text="最近重视没我咬致死咖喱个垃圾森林法尽快设立机构"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>

     <com.xywy.askforexpert.widget.view.MyListView
        android:id="@+id/list_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marght_52dp"
        android:layout_marginRight="@dimen/marght_left"
        android:background="@color/white"
        android:divider="#00000000"
        android:dividerHeight="4dp" />


    <RelativeLayout
        android:layout_marginTop="@dimen/marght_20dp"
        android:layout_marginRight="@dimen/marght_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="回复（0）"
            android:textColor="@color/color_00c8aa" />

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_reply"
            android:layout_marginRight="@dimen/marght_left"
            android:text="赞（1）"
            android:textColor="@color/color_00c8aa" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_20dp"
            android:layout_below="@id/tv_reply" />
    </RelativeLayout>

</LinearLayout>