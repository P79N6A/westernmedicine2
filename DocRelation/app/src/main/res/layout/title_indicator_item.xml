<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_tab_height">

    <CheckedTextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        tools:text="待回复"
        android:textSize="@dimen/text_14sp" />

    <RelativeLayout
        android:id="@+id/rl_red_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marght_10dp"
        android:layout_toRightOf="@id/item_name"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unread_count_bg" />
        <TextView 
            android:id="@+id/tv_num_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="90"
            android:textSize="@dimen/text_10sp"/>
    </RelativeLayout>



    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/xywy_service_margin_top_sty1"
        android:layout_centerVertical="true"
        android:background="@color/my_line"
        android:gravity="right" />

    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_centerVertical="true"
        android:background="@color/color_0dc3ce"
        android:layout_alignParentBottom="true"
        android:gravity="center" />
</RelativeLayout>