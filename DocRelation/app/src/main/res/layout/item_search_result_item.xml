<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <ImageView
        android:id="@+id/result_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/medicine_search_result"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marght_10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_result_title"
        android:layout_toRightOf="@id/result_img"
        android:layout_marginLeft="@dimen/marght_8dp"
        android:layout_centerVertical="true"
        android:textColor="@color/my_textcolor"
        android:textSize="@dimen/text_14sp"/>

</RelativeLayout>