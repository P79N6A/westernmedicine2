<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xywy.askforexpert.module.main.service.document.PhysicLiteratureActivity"
    tools:showIn="@layout/activity_physic_doc">

    <ImageView
        android:id="@+id/physic_title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/physic_doc" />

    <TextView
        android:id="@+id/physic_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/physic_title_img"
        android:layout_marginTop="18dp"
        android:background="@drawable/physic_search_bg"
        android:drawableLeft="@drawable/search_bar"
        android:drawablePadding="8dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="请输入检索内容" />

    <TextView
        android:id="@+id/physic_doc_had"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/physic_search"
        android:layout_below="@id/physic_search"
        android:layout_marginTop="36dp"
        android:text="已收录数据库"
        android:textColor="#666666"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/divider_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/physic_doc_had"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"
        android:src="@drawable/physic_divider" />

    <ListView
        android:id="@+id/example_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_grid"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</RelativeLayout>
