<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/yuanjiao"
        android:gravity="top"
        android:focusable="false"
         android:lineSpacingExtra="3dp"
        android:maxLines="20"
        android:padding="@dimen/marght_9dp"
        android:textSize="@dimen/text_14sp" />
	
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <GridView
            android:id="@+id/gv_shwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marght_9dp"
            android:layout_marginLeft="@dimen/marght_9dp"
            android:layout_marginRight="@dimen/marght_9dp"
            android:layout_marginTop="@dimen/marght_9dp"
            android:columnWidth="@dimen/height_64dp"
            android:horizontalSpacing="3dp"
            android:numColumns="auto_fit"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </LinearLayout>

</LinearLayout>