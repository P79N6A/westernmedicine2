<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/pharmacy_search"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_patient_manager_shape"
        android:drawableLeft="@drawable/home_search_blue"
        android:drawablePadding="10dp"
        android:focusableInTouchMode="true"
        android:hint="输入患者姓名"
        android:maxLength="38"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="14sp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/patient_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/next_btn"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="下一步"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/patient_detail_im_button_bg"/>
</LinearLayout>