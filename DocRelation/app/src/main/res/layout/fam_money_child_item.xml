<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xywy_service_doctor_title_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marght_left"
        android:gravity="center_vertical"
        android:textColor="@color/my_textcolor"
        android:textSize="@dimen/text_12sp" />

    <ImageView
        android:id="@+id/img_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/true_ok"
        android:layout_marginRight="@dimen/marght_left"
        />


</RelativeLayout>