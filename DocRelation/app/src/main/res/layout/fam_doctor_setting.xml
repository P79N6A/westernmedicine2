<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="家庭医生"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_left"
            android:background="@drawable/radio_off" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_doc_words"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="医生寄语"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_doc_special"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="擅长疾病"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="价格"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:id="@+id/enter_right_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_title_img_top"
            android:layout_toLeftOf="@id/enter_right_12"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_askphone_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="接电话时间"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:id="@+id/enter_right_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_title_img_top"
            android:layout_toLeftOf="@id/enter_right_13"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_category_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/item_bg_selector"
        android:onClick="onClick_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:text="折扣设置"
            android:textColor="@color/my_textcolor" />

        <ImageView
            android:id="@+id/enter_right_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/enter_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_title_img_top"
            android:layout_toLeftOf="@id/enter_right_15"
            android:text="" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marght_8dp"
            android:layout_marginRight="@dimen/marght_8dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_selector"
            android:onClick="onClick_back"
            android:text="申请开通"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />
        <!--
             <Button 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_normal"
            android:text="我要开通请联系我"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
           	android:layout_gravity="center"
            />
        -->
    </LinearLayout>


