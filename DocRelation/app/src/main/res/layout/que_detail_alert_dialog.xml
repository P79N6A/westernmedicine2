<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:padding="@dimen/marght_20dp"
    android:background="@drawable/shape_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/marght_10dp"
        android:layout_centerHorizontal="true"
        tools:text="确定要将该问题转给其他医生吗？转诊成功后，您无法获取该题目的绩效哦"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/marght_20dp"
        android:layout_marginBottom="@dimen/marght_10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/marght_10dp"
            android:paddingBottom="@dimen/marght_10dp"
            android:gravity="center"
            android:background="@drawable/edit_frame_sytle"
            android:text="确定"/>

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/marght_10dp"
            android:paddingBottom="@dimen/marght_10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_frame_sytle"
            android:layout_marginLeft="@dimen/marght_10dp"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>