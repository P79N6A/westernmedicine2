<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_img_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marght_left"
        android:layout_marginTop="@dimen/marght_8dp"
        android:gravity="center"
        android:text="绑定手机后，下次可使用手机号登录"
        android:textColor="@color/tab_color_nomal"
        android:textSize="@dimen/text_12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marght_45dp"
        android:layout_marginTop="@dimen/marght_8dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_login_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:src="@drawable/login_user_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/marght_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@color/my_line" />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@null"
            android:hint="请输入手机号码"
            android:textSize="14sp"
            android:textColor="@color/tab_color_nomal"
            android:textColorHint="@color/my_textcolor1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marght_45dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:src="@drawable/picma" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/marght_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@color/my_line" />
        <EditText
            android:id="@+id/et_pic_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@null"
            android:hint="请输入图形验证码"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/tab_color_nomal"
            android:textColorHint="@color/my_textcolor1"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_getyzm_pic"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_getyzm_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="换一个"
            android:textColor="@color/color_0dc3ce"
            android:layout_marginRight="@dimen/dp16"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marght_45dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:src="@drawable/yzm" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/marght_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marght_left"
            android:background="@color/my_line" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_yzm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/yzm_bg_selector"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp16"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_line" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/marght_45dp"
        android:layout_marginLeft="@dimen/marght_left"
        android:layout_marginRight="@dimen/marght_right"
        android:layout_marginTop="@dimen/marght_right"
        android:background="@drawable/blue_btn_selector"
        android:gravity="center"
        android:paddingBottom="@dimen/marght_8dp"
        android:paddingTop="@dimen/marght_8dp"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14sp" />

</LinearLayout>