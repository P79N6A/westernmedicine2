<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_common_divider_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marght_8dp"
        android:paddingTop="@dimen/dp16"
        android:paddingBottom="@dimen/dp16"
        android:background="@color/white"
        android:orientation="horizontal">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/c_00c8aa"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/c333"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_14sp"
            android:text="诊室服务"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c999"
            android:textSize="@dimen/text_11sp"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/more_normal"
            android:gravity="center"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/dp16"
            android:text="更多服务"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp">
        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_wtgc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />

        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_imwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="0.5dp"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />

        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_jtys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="0.5dp"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp">
        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_dhys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />

        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_yyzz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="0.5dp"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />
        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/dsiv_consulting_room_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="0.5dp"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp">
        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/more_servide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true" />

        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/more_servide1"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="0.5dp"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true"/>
        <com.xywy.askforexpert.widget.module.home.HomeRoomServiceItemView
            android:id="@+id/more_servide2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="0.5dp"
            android:background="@color/white"
            app:icon_src="@drawable/icon_discover_question_square_opened"
            app:name_text="名称"
            app:number_text="20"
            app:number_text_visibility="false"
            app:open_text_visibility="true"/>
    </LinearLayout>
</LinearLayout>
