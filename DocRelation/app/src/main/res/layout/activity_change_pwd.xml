    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_45dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_login_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:src="@drawable/login_user_icon" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/marght_left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@color/my_line" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:inputType="phone"
                android:maxLines="1"
                android:hint="请输入手机号"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:src="@drawable/picma" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/marght_left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@color/my_line" />
            <EditText
                android:id="@+id/et_pic_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:hint="请输入图形验证码"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1"
                android:textSize="14sp"/>
                </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_getyzm_pic"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_getyzm_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="换一个"
                android:textColor="@color/c_00c8aa"
                android:textSize="12sp" />
                </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_45dp"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:src="@drawable/yzm" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/marght_left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@color/my_line" />
            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1"
                android:textSize="14sp"/>
                </LinearLayout>

            <TextView
                android:id="@+id/tv_getyzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@color/c_00c8aa"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_45dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:src="@drawable/login_user_pwd" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/marght_left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@color/my_line" />
            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:password="true"
                android:maxLines="1"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/marght_45dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:src="@drawable/login_user_pwd" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/marght_left"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@color/my_line" />
            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/marght_left"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:password="true"
                android:maxLines="1"
                android:textColor="@color/tab_color_nomal"
                android:textColorHint="@color/my_textcolor1"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/marght_45dp"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginRight="@dimen/marght_right"
            android:layout_marginTop="@dimen/marght_right"
            android:background="@color/c_00c8aa"
            android:gravity="center"
            android:paddingBottom="@dimen/marght_8dp"
            android:paddingTop="@dimen/marght_8dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

</RelativeLayout>