<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_title"
        android:layout_marginLeft="@dimen/marght_16dp"
        android:layout_marginTop="@dimen/marght_16dp"
        android:layout_marginRight="@dimen/marght_10dp"
        android:textColor="@color/my_textcolor"
        android:textSize="@dimen/text_14sp"
        android:textStyle="bold"
        android:text="阿拉斯加雪橇犬"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_intro"
        android:layout_below="@id/medicine_title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/marght_16dp"
        android:layout_marginRight="@dimen/marght_10dp"
        android:textColor="@color/lightGrey"
        android:textSize="@dimen/text_12sp"
        android:text="一日一次"
        android:lines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_price"
        android:layout_below="@id/medicine_intro"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/marght_10dp"
        android:layout_marginLeft="@dimen/marght_16dp"
        android:layout_marginBottom="@dimen/marght_10dp"
        android:textColor="@color/medicine_price_text"
        android:textSize="@dimen/text_14sp"
        android:text="123"
        />

    <com.xywy.askforexpert.module.discovery.medicine.view.AmountView
        android:id="@+id/amount_view_count"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/medicine_intro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        app:btnTextSize="14sp"
        app:btnWidth="32dp"
        app:tvWidth="46dp"
        />



</RelativeLayout>