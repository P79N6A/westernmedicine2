<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/media_service_list_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/media_service_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/media_service_list_avatar"
        android:layout_toRightOf="@id/media_service_list_avatar"
        android:textColor="#333333"
        android:textSize="14sp" />

    <View
        style="@style/half_dp_horizontal_line"
        android:layout_below="@id/media_service_list_avatar" />

</RelativeLayout>