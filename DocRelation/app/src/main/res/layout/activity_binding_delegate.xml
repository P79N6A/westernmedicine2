<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_tab_height"
        android:background="@drawable/toolbar_bg_no_alpha"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/base_back_btn_selector_new" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="填写邀请码"
            android:textColor="@color/white"
            android:textSize="@dimen/title_tv_size" />

        <ImageButton
            android:id="@+id/ib_share"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/marght_left"
            android:background="@drawable/site_share" />
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_delegate_id"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:textColor="@color/tv_black_333"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="请输入邀请码" />


    <Button
        android:id="@+id/btn_binding"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_app_common_selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_delegate_id"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="提交"
        android:textColor="@color/white" />


</RelativeLayout>
