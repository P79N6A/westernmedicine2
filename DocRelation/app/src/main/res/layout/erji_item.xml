<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_item_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearLayout_height" >

        <ImageView
            android:id="@+id/iv_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginRight="@dimen/marght_right"
            android:background="@drawable/true_ok"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marght_left"
            android:layout_marginRight="@dimen/marght_11dp"
            android:layout_toLeftOf="@id/img_enter"
            android:singleLine="true"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>
<!-- <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/my_line"/> -->
</LinearLayout>