<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="12dp"
        android:text="这是标题"
        android:textColor="#333333"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_picture_bg"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_below="@+id/tv_title"
        android:background="#AAAAAA">


        <ImageView
            android:id="@+id/iv_bg"
            android:background="@color/live_show_list_item_default_bg_color"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_live_show"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="#ff9900"
            android:gravity="center"
            android:lines="1"
            android:text="直播"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="#66000000"
            android:gravity="center"
            android:lines="1"
            android:text="回放"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_help_user_head" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_user_head"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:lines="1"
            android:layout_marginLeft="8dp"
            android:text="用户名"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:drawableLeft="@drawable/icon_live_show_view_count_head"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:lines="1"
            android:text="3018"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </RelativeLayout>


</RelativeLayout>
